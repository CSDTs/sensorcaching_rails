<%= simple_form_for(@sensor) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    
    <%= f.label :sensor_type %> <br />
    <%= f.collection_select(:sensor_type_id, SensorType.all, :id, :name) %>
    
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    
  </div>
  <br />
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
